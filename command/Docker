Docker:
    # Set up for Apple M2 chip with 2 threads and parallel testing:
    docker run -d --name selen-chromium -p 4444:4444   --shm-size= “2g” \
      -e SE_NODE_MAX_SESSIONS=2 \
      -e SE_NODE_OVERRIDE_MAX_SESSIONS=true \
      selenium/standalone-chromium:4.35.0

    # stop/remove any old container using 4444
    docker rm -f selen-chromium 2>/dev/null

    # verify it’s ready
    curl http://localhost:4444/status
    # open http://localhost:7900  (password: secret) to watch the browser


Jenkins
    # Create a Jenkins image to docker
    docker run -p 8080:8080 -p 50000:50000 -d -v jenkins_home -v jenkins_home:/var/jenkins_home jenkins/jenkins:lts-jdk17

    # Get Jenkins password
    docker logs [Jenkins image id]
    # auto generated the password: 25a711adc57d4be58c9e8f3dba32f868

